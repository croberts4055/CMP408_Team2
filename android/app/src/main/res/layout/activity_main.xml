<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tip_calculator_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tip Calculator"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/tip_view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/tip_ic_launcher_round"
        android:layout_weight="1"
        android:onClick="project1"/>


    <TextView
        android:id="@+id/sport_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sports"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20dp"

        />

    <ImageButton
        android:id="@+id/sport_button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/sport_ic_launcher_round"
        android:layout_weight="1"
        android:onClick="project2"/>

    <TextView
        android:id="@+id/foodie_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foodie"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/food_ic_launcher_round"
        android:layout_weight="1"
        android:onClick="project3"/>

</LinearLayout>